<div class="container mx-auto px-4">
  <h1 class="text-3xl text-center font-semibold text-red-400 mb-6 pb-4">Amreet's To-do List</h1>

  <!-- Flex container to hold both boxes side by side -->
  <div class="flex justify-between space-x-8">

    <!-- Task List Box -->
    <div class="w-full md:w-1/2 bg-white shadow-md p-6 rounded-lg">
      <h2 class="text-2xl font-semibold text-red-400 mb-4">Current Todo's</h2>
      <table class="w-full mt-4 border-separate table-auto text-slate-500">
        <tbody>
          <% @todos.each do |todo| %>
            <tr>

              <td class="px-3 py-4 text-sm font-normal text-left text-red-600 bg-red-50">
                <%= todo.description %>
              </td>
              <td class="px-3 py-4 text-sm font-normal text-left text-red-600 underline bg-white">
                <%= button_to "Delete", todo_path(todo), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Add Task Box -->
    <div class="w-full md:w-1/3 bg-white shadow-md p-6 rounded-lg">
      <h2 class="text-2xl font-semibold text-red-400 mb-4">Add a New Todo</h2>
      <%= form_with(model: Todo.new, class: "my-10") do |form| %>
        <div class="my-5">
          <%= form.text_field :description, placeholder: "Add a new task", class: "block shadow rounded-md border border-red-400 outline-none px-3 py-2 mt-2 w-full" %>
        </div>
        <div class="inline">
          <%= form.submit class: "rounded-lg py-3 px-5 bg-red-400 text-white inline-block font-medium cursor-pointer hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
